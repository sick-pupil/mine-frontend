{
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["node_module", "**/node_modules/*"],
  "compilerOptions": {
    //编译生成的目标代码版本
    "target": "ES2016",
    //编译生成代码的模板版本标准
    "module": "ES2015",
    //增量编译
    "incremental": true,
    //增量编译文件存储位置
    "tsBuildInfoFile": "./tsbuildinfo",
    //打印诊断信息
    "diagnostics": true,
    //允许编译器编译JS，JSX文件
    "allowJs": true,
    //允许在JS文件中报错
    "checkJs": true,
    //编译输出目录
    "outDir": "./dist",
    //指定输出文件目录
    "rootDir": "./",
    //自动生成声明文件
    "declaration": true,
    //指定生成声明文件存放目录
    "declarationDir": "./file",
    //只生成声明文件，而不会生成js文件
    "emitDeclarationOnly": true,
    //生成目标文件的sourceMap文件
    "sourceMap": true,
    //生成目标文件的inline SourceMap
    "inlineSourceMap": true,
    //为声明文件生成sourceMap
    "declarationMap": true,
    //声明文件目录
    "typeRoots": [],
    //加载的声明文件包
    "types": [],
    //删除注释
    "removeComments": true,
    //允许使用TypeScript项目引用特性，允许将多个子项目组合成一个项目
    "composite": true,
    //不输出文件,即编译后不会生成任何js文件
    "noEmit": true,
    //错误不输出文件
    "noEmitOnError": true,
    //开启严格类型检查
    "strict": true,
    "alwaysStrict": true,
    //解析非相对模块的基地址，默认是当前目录
    "baseUrl": "./",
    //打印输出文件与编译文件
    "listEmittedFiles": true,
    "listFiles": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@public/*": ["./public/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@router/*": ["./src/router/*"],
      "@stores/*": ["./src/stores/*"],
      "@views/*": ["./src/views/*"],
    }
  }
}
